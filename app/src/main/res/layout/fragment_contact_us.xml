<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login">

    <ImageView
        android:id="@+id/ic_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_menu" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="104dp"
        android:layout_height="105dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/whitelogo" />

    <TextView
        android:id="@+id/contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:text="Contact Us"
        android:textColor="@color/login_form_details"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/contact_or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_us"
        android:layout_marginTop="16dp"
        android:text="Write us an email!"
        android:textAlignment="center"
        android:textColor="@color/login_form_details"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/email_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/contact_or"
        android:layout_margin="16dp"
        android:background="@android:color/background_light"
        android:hint="Your name"
        android:inputType="textPersonName"
        android:padding="4dp" />

    <EditText
        android:id="@+id/email_surname"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/email_name"
        android:layout_marginHorizontal="16dp"
        android:background="@android:color/background_light"
        android:hint="Your surname"
        android:inputType="textPersonName"
        android:padding="4dp" />

    <TextView
        android:id="@+id/email_what"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_surname"
        android:layout_marginTop="8dp"
        android:text="What do you want to contact us about?"
        android:textAlignment="center"
        android:textColor="@color/login_form_details" />

    <LinearLayout
        android:id="@+id/email_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_what"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/email_option_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Newly opened"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/email_option_2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Closed"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/email_option_3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Other"
            android:textAllCaps="false"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <EditText
        android:id="@+id/email_feedback"
        android:layout_width="379dp"
        android:layout_height="237dp"
        android:layout_above="@id/email_send"
        android:layout_below="@id/email_options"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="14dp"
        android:background="@android:color/background_light"
        android:gravity="top"
        android:hint="Your feedback"
        android:inputType="textMultiLine"
        android:lines="6"
        android:padding="8dp" />

    <Button
        android:id="@+id/email_send"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:text="Send" />

</RelativeLayout>